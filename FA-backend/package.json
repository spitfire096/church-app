{
    "name": "fa-backend",
    "version": "1.0.0",
    "type": "commonjs",
    "description": "Backend for Church Follow-up App",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "migrate": "sequelize-cli db:migrate",
        "test": "jest",
        "clean": "node scripts/cleanup.js",
        "restart": "npm run clean && npm run dev"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/nodemailer": "^6.4.4",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "glob": "^11.0.1",
        "jsonwebtoken": "^9.0.2",
        "lru-cache": "^11.0.2",
        "nodemailer": "^6.7.5",
        "nodemon": "^3.1.9",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "rimraf": "^6.0.1",
        "sequelize": "^6.35.1",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^18.15.11",
        "sequelize-cli": "^6.6.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.3"
    }
}
